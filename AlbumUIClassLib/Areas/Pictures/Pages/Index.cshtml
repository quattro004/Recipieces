@page
@model AlbumUIClassLib.Areas.Pictures.Models.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <h3 class="col-10">Pictures</h3>
    <a asp-page="Create" class="col-2 btn btn-outline-primary">New Picture</a>
</div>
<hr />
@if (!Model.Pictures.Any())
{
    <p class="row">No pictures have been created yet.</p>
}
else
{
    var pictures = Model.Pictures.ToList();
    var closeCardDeck = false;
    
    <div class="row">
        <div class='card-deck'>
        @for (var index = 0; index < pictures.Count(); index++)
        {
            <!-- Only allow 3 cards per deck -->
            var addCardDeck = @index != 0 && @index % 3 == 0;
            var picture = pictures[index];
            var pictureId = picture.Id;

            if (@addCardDeck)
            {
                @Html.Raw("</div>"); // Close the previous card deck before starting a new one
                @Html.Raw("<div class='card-deck'>");
                closeCardDeck = true;
            }
                <div class="card shadow-sm text-white bg-dark mb-3" style="max-width: 18rem;">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg"
                        preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: No Picture">
                        <title>Placeholder</title>
                        <rect width="100%" height="100%" fill="#55595c"/>
                        <text x="30%" y="50%" fill="#eceeef" dy=".3em">No Picture</text>
                    </svg>
                    <!-- <img src="images/cookie.jpeg" class="card-img-top" alt="@picture.Name" />  -->
                    <div class="card-body">
                        <h5 class="card-title">@picture.Name</h5>
                        <small class="card-text">@picture.Description</small>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            <div class="btn-group">
                                <a asp-page="Details" asp-route-id="@pictureId" class="btn btn-sm btn-outline-secondary">View</a>
                                <a asp-page="Edit" asp-route-id="@pictureId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-page="Delete" asp-route-id="@pictureId" class="btn btn-sm btn-outline-secondary">Remove</a>
                            </div>
                        </small>
                    </div>
                </div>
        }
        @if (@closeCardDeck)
        {
            Html.Raw("</div>");
        }
        </div>
    </div>
}