@page
@model RecipeUIClassLib.Areas.Recipes.Pages.DeleteModel
@{
    ViewData["Title"] = $"Delete {Model.Recipe.Title}";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Are you sure you want to delete the @Model.Recipe.Title recipe?</h3>
<div>
    <form method="post" asp-antiforgery="true" asp-action="Delete" >
        <input type="hidden" asp-for="Recipe.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Index">Back to Recipes</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
