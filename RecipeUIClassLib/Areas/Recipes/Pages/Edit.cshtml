@page "{id:length(24)}"
@model RecipeUIClassLib.Areas.Recipes.Pages.EditModel
@{
    ViewData["Title"] = $"Edit {Model.Recipe.Title}";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form id="edit" asp-antiforgery="true" method="post">
     <input type="hidden" asp-for="Recipe.Id" />
     @{await Html.RenderPartialAsync("_Recipe", Model);}
    <div class="form-row">
        <div class="form-group col">
            <button type="submit" class="btn btn-primary">Update Recipe</button>
            <a asp-page="Index">Back to Recipes</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
