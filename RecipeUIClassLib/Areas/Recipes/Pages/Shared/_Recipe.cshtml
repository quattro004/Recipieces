
@model RecipeUIClassLib.Areas.Recipes.Models.RecipeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-row">     
    <div class="form-group col">
        <input asp-for="Recipe.Title" class="form-control" autofocus placeholder="Title" />
        <span asp-validation-for="Recipe.Title" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <select asp-for="SelectedCategory" asp-items="Model.Categories" class="form-control">
            <option>Select Category</option>
        </select>
        <span asp-validation-for="Recipe.Category" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <input asp-for="Recipe.Yield" class="form-control" placeholder="Yield" />
        <span asp-validation-for="Recipe.Yield" class="text-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <textarea asp-for="Keywords" class="form-control" rows="2" placeholder="Keywords"></textarea>
        <span asp-validation-for="Keywords" class="text-danger"></span>
    </div>
</div>
<div class="form-row">     
    <div class="form-group col">
        <input asp-for="Recipe.Description" class="form-control" placeholder="Enter Description" />
        <span asp-validation-for="Recipe.Description" class="text-danger"></span>
    </div>
</div>
<div class="form-row">             
    <div class="form-group col">
        <textarea asp-for="Ingredients" class="form-control" rows="4" placeholder="Enter a list of ingredients"></textarea>
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <textarea asp-for="Preparation" class="form-control" rows="2" placeholder="Enter any preparation steps"></textarea>
        <span asp-validation-for="Preparation" class="text-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-4">
        <input asp-for="Recipe.PrepTime" class="form-control" placeholder="Prep Time" />
        <span asp-validation-for="Recipe.PrepTime" class="text-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <textarea asp-for="Instructions" class="form-control" rows="5" placeholder="Enter cooking instructions"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-4">
        <input asp-for="Recipe.CookTime" class="form-control" placeholder="Cook Time" />
        <span asp-validation-for="Recipe.CookTime" class="text-danger"></span>
    </div>
</div>